@{ ViewData["Title"] = "Detail";
    Layout = "_Layout"; }

<section class="jumbotron text-center">
    <div class="container">
        <h2>Sponge Bob Movie</h2>
        <img src="~/images/download.png" width="60" style="padding: 5px" />
        <h6>Download</h6>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Year</label>
                <div class="col-sm-10">
                    <label class="form-control" id="showYear">2020-08-14</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Genre</label>
                <div class="col-sm-10">
                    <label class="form-control" id="showGenre">Animation</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <label class="form-control" id="showDescription" style="height:200px">This is the whole description of the movie.</label>
                </div>
            </div>
            <br />
            <p>
                <a asp-action="Index" class="btn btn-secondary my-2">Back to movies</a>
            </p>
        </form>
    </div>
</div>