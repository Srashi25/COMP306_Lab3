@{ ViewData["Title"] = "Upload movie";
    Layout = "_Layout"; }

<section class="jumbotron text-center">
    <div class="container">
        <h2>Upload a new movie</h2>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <form>
            <div class="form-group row">
                <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputTitle" />
                </div>
            </div>
            <div class="form-group row">
                <label for="inputYear" class="col-sm-2 col-form-label">Year</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="inputYear" />
                </div>
            </div>
            <div class="form-group row">
                <label for="inputGenre" class="col-sm-2 col-form-label">Genre</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputGenre" />
                </div>
            </div>
            <div class="form-group row">
                <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputDescription" style="height:200px" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">File: ####.mov</label>
                <div class="col-sm-10">
                    <a href="#" class="btn btn-secondary my-2">Browse...</a>
                </div>
            </div>
            <br />
            <p>
                <a asp-action="Index" class="btn btn-secondary my-2">Back to movies</a>
                <a href="#" class="btn btn-primary my-2">Upload</a>
            </p>
        </form>
    </div>
</div>