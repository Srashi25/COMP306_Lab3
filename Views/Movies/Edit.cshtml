@model Movie

@{
    ViewData["Title"] = "Movie Web | Edit Movie";
    Layout = "_Layout";
}

<h1 class="text-center">Edit Movie</h1>
<section class="jumbotron text-center">
    <div class="container">
        <h2 class="text-center">
            @Model.MovieName
        </h2>
     </div>
</section>

<div class="album py-5 bg-light">
    <div class="container col-md-6 justify-content-center">
        <form asp-action="Edit" asp-controller="Movies">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieId" />
            <div class="form-group row">
                <label asp-for="Genre" class="control-label">Genre</label><br /><br />
                    <select asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre>()" class="form-control">
                        <option value="">Choose a Genre</option>
                    </select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="text-center">
                <a asp-action="Index" asp-controller="Movies" class="btn btn-outline-danger my-2">Back to movies</a>
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
