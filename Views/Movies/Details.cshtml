@model Movie

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1 class="text-center">Details</h1>

<section class="jumbotron text-center">
    <div class="container">
        <h2>@Model.MovieName  <span>  <button><img src="~/images/download.png" width="40" style="padding: 5px" /></button></span></h2>
        <h4><a asp-action="ReviewsList" asp-controller="Reviews">Reviews</a></h4>
        @*<h5><a asp-action="AddReview" asp-controller="Reviews" asp-route-id="@Model.MovieId">Review Movie</a></h5>*@
        <form asp-action="AddReview" asp-controller="Reviews" method="post">
            <input type="hidden" name="MovieId" value="@Model.MovieId" />
            <h4>
                <a class="btn btn-outline-secondary" style="float:right" asp-controller="Reviews" asp-action="AddReview" asp-route-id="@Model.MovieId">Add Review</a>
            </h4>
        </form>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container col-md-6 justify-content-center">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Rating</label>
            <div class="col-sm-10">
                <label class="form-control" id="showYear">@Model.Rating</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Year</label>
            <div class="col-sm-10">
                <label class="form-control" id="showYear">@Model.ReleaseDate.ToShortDateString()</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Genre</label>
            <div class="col-sm-10">
                <label class="form-control" id="showGenre">@Model.Genre</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <label class="form-control" id="showDescription" style="height:200px">@Model.Description</label>
            </div>
        </div>
        <br />
        <p>
            <div class="text-center">
                <a asp-action="Index" asp-controller="Movies" class="btn btn-outline-danger my-2">Back to movies</a>
                <a asp-action="Edit" asp-route-id="@Model.MovieId" class="btn btn-danger">Edit</a>
            </div>
        </p>
    </div>
</div>