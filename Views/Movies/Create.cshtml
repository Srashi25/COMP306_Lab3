@model Movie

@{ ViewData["Title"] = "Upload movie";
    Layout = "_Layout"; }

<section class="jumbotron text-center">
    <div class="container">
        <h2>Upload a new movie</h2>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container col-md-6 justify-content-center">
        <form asp-action="Create" asp-controller="Movies" method="post">

            <div class="form-group row">
                <label asp-for="MovieName" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="MovieName" />
                    <span asp-validation-for="MovieName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Rating" class="col-sm-2 col-form-label">Rating</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        1
                        @Html.RadioButtonFor(model => model.Rating, 1)
                        2
                        @Html.RadioButtonFor(model => model.Rating, 2)
                        3
                        @Html.RadioButtonFor(model => model.Rating, 3)
                        4
                        @Html.RadioButtonFor(model => model.Rating, 4)
                        5
                        @Html.RadioButtonFor(model => model.Rating, 5)
                    </div>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ReleaseDate" class="col-sm-2 col-form-label">Year</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" asp-for="ReleaseDate" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Genre" class="col-sm-2 col-form-label">Genre</label>
                <div class="col-sm-10">
                    <select class="select" asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre>()">
                        <option value="">Choose a Genre</option>
                    </select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Image Url</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">File:</label>
                <span class="text-danger"></span>
                <div class="col-sm-10">
                    <input type="file" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control" asp-for="Description" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <p>
                <div class="text-center">
                    <a asp-action="Index" class="btn btn-outline-danger my-2">Back to movies</a>
                    <button type="submit" class="btn btn-danger my-2">Upload</button>
                </div>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
