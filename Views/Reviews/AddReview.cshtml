@model MovieReview

@{ ViewData["Title"] = "Movie Web | Add Review";
    Layout = "_Layout"; }
<h1 class="text-center">Add Review</h1>

<h4 class="text-center">Review</h4>

<section class="jumbotron text-center">
    <div class="container">
        <h2>Movie Name</h2>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container col-md-6">
        <form asp-controller="Reviews" asp-action="AddReview" method="post">
            <input type="hidden" asp-for="@Model.MovieId" />
            <input type="hidden" asp-for="@Model.Review.ReviewID" />
            <br />
            <h3>Write a review</h3>
            <div class="form-group">
                <label asp-for="@Model.Review.Title">Title</label>
                <input type="text" class="form-control" asp-for="@Model.Review.Title" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Review.ReviewDescription">Review Description</label>
                <textarea type="text" class="form-control" asp-for="@Model.Review.ReviewDescription" rows="5"></textarea>
            </div>
            <br />
            <p>
                <a asp-action="Index" class="btn btn-outline-danger my-2">Back to movies</a>
                <button type="submit" class="btn btn-danger my-2">Save</button>
            </p>
        </form>
    </div>
</div>